<p id="error"><%= flash[:error] %></p>

<p>
  <b>Name:</b>
  <%= @tournament.name %>
</p>

<p>
  <b>Status:</b>
  <%= @tournament.status %>
</p>


<div>
	<h4>Teams Signed Up</h4>
 <% @teams.each do |team| %>
 <div>
 		<%= team.name %>
 		<%= team.description %>	
 </div>
 <% end %>

</div>

<div>
	
	<h3> Matches</h3>
	<% @matches.each do |match|%>
	<%= match.name %>
	<%= match.date %>
	<%= match.hometeamname %>
	<%= match.awayteamname %>

	<% end %>
</div>

<%= link_to 'Edit', edit_tournament_path(@tournament) %> |
<%= link_to 'Back', tournaments_path %>
<%= link_to 'Add Teams', tournament_getteams_path(@tournament) %>
<%= link_to 'Create a Match', new_tournament_match_path(@tournament) %>